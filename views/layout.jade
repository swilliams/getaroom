!!!
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/screen.css')

		!= js('app')
		script(src='/socket.io/socket.io.js')

		script(type="text/template", id="user_row_template")
			div.span2
				span.username {{name}}
			div.span1
				span.idle Idle {{idle}}

		script(type="text/template", id="message_template")
			div.span2
				span.username {{userName}}
			div.span5
				span.content {{content}}
			div.span1
				span.timestamp {{formattedTimestamp}}


	body
		div.navbar(class="navbar-fixed-top")
			div.navbar-inner
				div.container
					a.brand(href="#") Home
					ul#login_container.nav(class="pull-right")
						- if (session.currentUser)
							li
								a
									= session.currentUser.name
							li
								form(action='/logout', method='post')
									a#logout(href="logout") Logout
						- else
							li
								a(href="/login") Login



		div.container#main
			- var flashTypes = ['info', 'error']
			each flashType in flashTypes
				if flash[flashType]
					p.flash(class=flashType)
						= flash[flashType]

			!= body